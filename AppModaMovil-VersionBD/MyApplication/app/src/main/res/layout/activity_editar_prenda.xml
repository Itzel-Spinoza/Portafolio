<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPrenda">

    <ImageView
        android:id="@+id/imgPrenda"
        android:layout_width="243dp"
        android:layout_height="184dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagennodisponible" />

    <EditText
        android:id="@+id/txtNombrePrenda"
        android:layout_width="303dp"
        android:layout_height="42dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"

        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPrenda" />

    <EditText
        android:id="@+id/txtDescripcionPrenda"
        android:layout_width="300dp"
        android:layout_height="82dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        android:ems="10"

        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinerCate" />

    <TextView
        android:id="@+id/txtTallaPrenda"
        android:layout_width="37dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/talla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombrePrenda" />

    <TextView
        android:id="@+id/txtSignoPesos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="$"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripcionPrenda" />

    <EditText
        android:id="@+id/txtPrecioPrenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:inputType="number"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txtSignoPesos"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripcionPrenda" />

    <TextView
        android:id="@+id/txtDonativoPara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:text="Donativo para:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSignoPesos" />

    <Button
        android:id="@+id/btnEditarPrenda"
        android:layout_width="111dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Editar "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPorcentajeP" />

    <Button
        android:id="@+id/btnEliminarPrendaAg"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnGuardarCambiosPrenda"
        app:layout_constraintTop_toBottomOf="@+id/txtPorcentajeP" />

    <TextView
        android:id="@+id/txtGananciaPrenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"

        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txtGanancia"
        app:layout_constraintTop_toBottomOf="@+id/spinAsociacionnnn" />

    <TextView
        android:id="@+id/porcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="%"
        app:layout_constraintStart_toEndOf="@+id/txtPorcentajeP"
        app:layout_constraintTop_toBottomOf="@+id/txtDonativoPrenda" />

    <TextView
        android:id="@+id/txtDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="De: $"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDonativoPara" />

    <TextView
        android:id="@+id/txtDonativoPrenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txtDe"
        app:layout_constraintTop_toBottomOf="@+id/txtDonativoPara" />

    <EditText
        android:id="@+id/txtPorcentajeP"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"

        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDonativoPrenda" />

    <TextView
        android:id="@+id/txtGanancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="18dp"
        android:text="Ganancia"
        app:layout_constraintStart_toEndOf="@+id/txtDonativoPrenda"
        app:layout_constraintTop_toBottomOf="@+id/spinAsociacionnnn" />

    <TextView
        android:id="@+id/txtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/imgPrenda"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtEstadoPrenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txtID"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ID: "
        app:layout_constraintEnd_toStartOf="@+id/txtID"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:text="Estado:"
        app:layout_constraintStart_toEndOf="@+id/txtID"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGuardarCambiosPrenda"
        android:layout_width="115dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEditarPrenda"
        app:layout_constraintTop_toBottomOf="@+id/txtPorcentajeP"
        app:layout_constraintVertical_bias="0.457" />

    <Spinner
        android:id="@+id/spinnerTallasss"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@+id/txtTallaPrenda"
        app:layout_constraintTop_toBottomOf="@+id/txtNombrePrenda"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/spinAsociacionnnn"
        android:layout_width="185dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDonativoPrenda"
        app:layout_constraintStart_toEndOf="@+id/txtDonativoPara"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecioPrenda"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible"
        android:focusable="false"
        android:clickable="false"/>

    <TextView
        android:id="@+id/txtCateee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="CategorÃ­a:"
        app:layout_constraintBottom_toTopOf="@+id/txtDescripcionPrenda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTallaPrenda"
        app:layout_constraintVertical_bias="0.461"
        />

    <Spinner
        android:id="@+id/spinerCate"
        android:layout_width="215dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/txtCateee"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTallasss"
        android:focusable="false"
        android:clickable="false"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/genero"
        app:layout_constraintEnd_toStartOf="@+id/spinerGenero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/spinnerTallasss"
        app:layout_constraintTop_toBottomOf="@+id/txtNombrePrenda" />

    <Spinner
        android:id="@+id/spinerGenero"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombrePrenda" />

</androidx.constraintlayout.widget.ConstraintLayout>