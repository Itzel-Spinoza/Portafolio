<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPedido"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp"
    android:layout_marginEnd="8dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtIDDonaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID donacion:" />

        <TextView
            android:id="@+id/txtIdDonacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/txtIDDonaciones"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtIdPedidoDo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIDDonaciones"
            android:layout_marginTop="7dp"
            android:text="Id Pedido:" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIdPedidoDo"
            android:layout_marginTop="7dp"
            android:text="Id prenda:" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView19"
            android:layout_marginTop="7dp"
            android:text="Nombre prenda:" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:layout_marginTop="7dp"
            android:text="Fecha pedido:" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView22"
            android:layout_marginTop="7dp"
            android:text="AsociaciÃ³n:" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_marginTop="7dp"
            android:text="Total donativo:" />

        <TextView
            android:id="@+id/txtIdPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIdDonacion"
            android:layout_marginStart="39dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/txtIdPedidoDo"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtIdPrenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIdPedido"
            android:layout_marginStart="39dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView19"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtNombrePrendaDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIdPrenda"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView20"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtFechaPedidoDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombrePrendaDon"
            android:layout_marginStart="18dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/textView22"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtAsociacionDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFechaPedidoDon"
            android:layout_marginStart="34dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/textView23"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtTotalDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAsociacionDon"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/textView24"
            android:text="TextView" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>